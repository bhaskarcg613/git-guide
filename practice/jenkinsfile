pipeline{
    agent any
    
    stages{
        stage('hostname'){
            steps{
                sh 'hostname'
            }
        }
        
        stage('syatem-date'){
            steps{
                sh 'date'
            }
        }
        
        stage('cpu-details'){
            steps{
                sh 'lscpu'
            }
        }
        
        stage('memory-usage'){
            steps{
                sh 'free -h'
            }
        }
    }
}
