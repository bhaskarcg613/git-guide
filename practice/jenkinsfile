pipeline{
    agent any
    
    stages{
        stage('hostname'){
            steps{
                powershell 'hostname'
            }
        }
        
        stage('syatem-date'){
            steps{
                powershell 'date'
            }
        }
        
        stage('cpu-details'){
            steps{
                powershell 'lscpu'
            }
        }
        
        stage('memory-usage'){
            steps{
                bat 'echo "pipeline success" '
            }
        }
    }
}
